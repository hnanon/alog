<%= form_for @order, :html => {:class => 'order-form'} do |f| %>
  <% if @order.errors.any? %>
    <div class="grid wrap">
      <div class="unit wwhole error">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this job from being saved:</h2>
        <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="grid wrap no-gutters">
    <div class="unit whole field">
      <%= f.fields_for :line_items do |line_item| %>
        <%= render 'line_item_fields', :f => line_item %>
      <% end %>
      <%= link_to_add_association 'Add Another Product', f, :line_items %>
    </div>
    <div class="unit whole actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
