<%= form_for @order, :html => {:class => 'order-form'} do |f| %>
  <% if @order.errors.any? %>
    <div class="grid wrap">
      <div class="unit wwhole error">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this job from being saved:</h2>
        <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="grid wrap">
    <div class="unit one-fifth">
      <%= f.label :location, "Location" %>
    </div>
    <div class="unit four-fifths">
      <%= collection_select( :order, :location_id, @locations, :id, :address ) %>
    </div>
    <div class="unit one-fifth">
      <%= f.label :vendor, "Vendor" %>
    </div>
    <div class="unit four-fifths">
      <%= collection_select( :order, :vendor_id, @vendors, :id, :name ) %>
    </div>
    <div class="unit one-fifth"></div>
    </div>
    <%= f.fields_for :line_items do |line_item| %>
      <%= render 'line_item_fields', :f => line_item %>
    <% end %>
    <div class="unit four-fifths">
      <%= link_to_add_association 'add item', f, :line_items %>
    </div>
    <%#= f.add_nested_fields_link :line_items %>

  </div> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
